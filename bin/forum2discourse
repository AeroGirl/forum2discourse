#!/usr/bin/env ruby
require 'optparse'
require 'forum2discourse'

options = {table_prefix: ''}

parser = OptionParser.new do |opts|
  opts.on '-f', '--from TYPE', 'Type of software to export from. Supported: punbb, wordpress' do |t|
    options[:type] = f
  end

  opts.on '-h', '--help', 'Display this screen' do
    puts opts
    exit
  end
end

if ARGV.size == 0
  puts parser
  exit
end

parser.parse!
puts options.inspect
